{% extends "layouts/base.njk" %}

{% block main %}
<article class="max-w-5xl px-6 py-8 mx-auto my-4 mt-8 font-serif bg-white rounded-md shadow-sm" itemid="kochen.trillitzsch.net{{ page.url }}" itemscope itemtype="https://schema.org/BlogPosting">
  <header class="max-w-3xl mx-auto">
    {# <div> #}
    {# <div class="postTitle"> #}
    <h1 class="leading-tight" itemprop="headline">{{title}}</h1>
    {# <h1 class="postTitle__text">{{title}}</h1> #}
    {# </div> #}
    {% if author %}

    {% set myAuthor = authors %}
    {# | getAuthor: author #}

    <div class="mt-6 font-sans text-base text-gray-500"><span>Geschrieben von <strong><a href="/authors/{{ author }}" rel="author" itemprop="author" itemscope itemtype="https://schema.org/Person"><span itemprop="name">{{ author }}</span></strong></span></a> <span>am <time datetime="{{ page.date.toISOString() }}" itemprop="datePublished">{{ page.date.toLocaleDateString('de-DE') }}</time>.</span></div>
    {% endif %}
    </header>
    <section class="mt-8" itemprop="articleBody">
     {{ content | safe }}
    </section>
     {% if tags %}
     <footer class="max-w-3xl mx-auto">
     <hr class="mt-8">
     <div class="mt-8 tags">
       {# <h2 class="">Schlagw√∂rter</h2> #}
  <ul class="mt-2">
    {%- for tag in tags -%}
      {% if tag != "post" %}
      <li class="inline-block mx-0 mt-1 font-sans text-sm text-gray-800"><a class="inline-block px-2 py-1 no-underline bg-gray-300 rounded-full" href="/tags/{{ tag }}">{{ tag }}</a></li>
      {% endif %}
    {%- endfor -%}
  </ul>
  </div>
  </footer>
  {% endif %}
</article>


{# <aside>
  {{ content | toc }}
</aside> #}
    
 
{% endblock %}