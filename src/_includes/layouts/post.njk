{% block main %}
<article class="container max-w-3xl px-6 py-8 mx-auto my-4 font-serif">

    <div>
    {# <div class="postTitle"> #}
    <h1>{{title}}</h1>
    {# <h1 class="postTitle__text">{{title}}</h1> #}
    </div>
    {% if author %}
    <div class="mt-6 font-sans text-base text-gray-500"><span>Geschrieben von <strong>{{ author }}</strong></span> <span>am {{ page.date.toString() }}.</span></div>
    {% endif %}
     {{ content | safe }}

     {% if tags %}
     <hr>
     <div class="mt-8 tags">
       <h2 class="">Schlagw√∂rter</h2>
  <ul class="mt-4">
    {%- for tag in tags -%}
      {% if tag != "post" %}
      <li class="inline mx-0 font-sans text-sm text-white "><a class="inline-block p-1 no-underline bg-green-600 rounded" href="/tags/{{ tag }}">{{ tag }}</a></li>
      {% endif %}
    {%- endfor -%}
  </ul>
  </div>
  {% endif %}
