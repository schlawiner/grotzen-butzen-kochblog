{
  "name": "kochblog",
  "version": "1.0.0",
  "description": "Converting my old food blog from Wordpress to 11ty",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf build _site",
    "watch": "run-p 'dev:encore -- --watch' 'dev:eleventy -- --serve --quiet'",
    "dev:eleventy": "wait-on build/main.js build/main.css && cross-env NODE_ENV=development eleventy",
    "dev:encore": "cross-env NODE_ENV=development encore dev",
    "prod:eleventy": "cross-env NODE_ENV=production eleventy --quiet",
    "prod:encore": "cross-env NODE_ENV=production encore production",
    "build": "run-s clean prod:encore prod:eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schlawiner/grotzen-butzen-kochblog.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/schlawiner/grotzen-butzen-kochblog/issues"
  },
  "homepage": "https://github.com/schlawiner/grotzen-butzen-kochblog#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@symfony/webpack-encore": "^1.5.0",
    "@tailwindcss/typography": "^0.4.1",
    "alpinejs": "^3.2.4",
    "autoprefixer": "^10.3.2",
    "cross-env": "^7.0.3",
    "lunr": "^2.3.9",
    "lunr-languages": "^1.4.0",
    "markdown-it": "^12.0.4",
    "markdown-it-attrs": "^4.0.0",
    "markdown-it-deflist": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-loader": "^5.0.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.7",
    "wait-on": "^6.0.0"
  }
}
